<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MainBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MainAppTheme" parent="MainBaseTheme">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
    </style>

    <style name="MainActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background_color</item>
        <item name="android:displayOptions">none</item>
    </style>

    <style name="MainTabItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="General"></style>
    <style name="General.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="General.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="General.TextWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Start">
    </style>
    <style name="Start.GoRunningButton" parent="Start">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/music_runner_green_button</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    <style name="Running"></style>
    <style name="Running.StatisticNumber" parent="Running">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Running.StatisticUnits" parent="Running">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/running_info_statistic_units</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Running.StatisticUnitBackground" parent="Running">
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/running_info_background_color</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Running.ControlButtonContainer" parent="Running">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="Running.ControlButton" parent="Running">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">500dp</item>
    </style>

    <style name="Finish"></style>
    <style name="Finish.TopBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="My"></style>
    <style name="My.Title" parent="My">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="My.BarTitle">
        <item name="android:textColor">@color/my_subtitle</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="My.Bar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="My.BarSubtitle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/my_subtitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="My.Subtitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/my_subtitle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <style name="My.Number">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/my_title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="My.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/music_runner_green_border_with_gray_bg</item>
    </style>

    <style name="Music"></style>
    <style name="Music.PerformanceTag" parent="Music">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <!--item name="android:layout_marginTop">10dp</item-->
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Music.StatisticBox" parent="Music">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/music_runner_green_round_border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    <style name="Music.StatisticNumber">
        <item name="android:textSize">14dp</item>
        <!--item name="android:textStyle">bold</item-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Music.StatisticUnit">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Music.RankTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/music_info_red_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Music.RankHighlightNumber">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/music_info_green_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Music.RankGeneralBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/music_runner_green_round_border</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Music.RangGeneralBoxText">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Music.RankGeneralBoxIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Setting"></style>
    <style name="Setting.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/setting_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="Setting.Content">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/setting_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="Setting.RadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Setting.RadioButton">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/setting_content</item>
        <item name="android:background">@drawable/music_runner_radio_button</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
