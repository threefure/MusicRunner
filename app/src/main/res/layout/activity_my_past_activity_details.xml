<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mrunner="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/tiffany">
        <TextView
            android:id="@+id/my_past_activity_details_date"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_centerHorizontal="true"
            style="@style/Finish.TopBar"/>
        <TextView
            android:id="@+id/my_past_activity_details_time"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_past_activity_details_date"
            android:layout_centerHorizontal="true"
            style="@style/Finish.TopBar"/>
    </RelativeLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_past_activity_details_map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <LinearLayout
        android:id="@+id/my_past_activity_details_info_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Running.StatisticUnitBackground">
                <ImageButton
                    android:id="@+id/my_past_activity_details_camera"
                    android:background="@drawable/initial_photo"
                    android:layout_width="42dp"
                    android:layout_height="35dp"/>
                <ImageView
                    android:id="@+id/my_past_activity_details_photo"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="0dp"
                style="@style/Running.StatisticUnitBackground">
                <TextView
                    android:id="@+id/my_past_activity_details_duration"
                    android:text="@string/initial_duration"
                    style="@style/Running.StatisticNumber"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/Running.StatisticUnitBackground">
                <TextView
                    android:text="@string/distance"
                    style="@style/Running.StatisticUnits"/>
                <TextView
                    android:id="@+id/my_past_activity_details_distance"
                    android:text="@string/zero"
                    style="@style/Running.StatisticNumber"/>
                <TextView
                    android:id="@+id/my_past_activity_details_distance_unit"
                    android:text="@string/km"
                    style="@style/Running.StatisticUnits"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/Running.StatisticUnitBackground">
                <TextView
                    android:text="@string/calorie"
                    style="@style/Running.StatisticUnits"/>
                <TextView
                    android:id="@+id/my_past_activity_details_calorie"
                    android:text="@string/zero"
                    android:textSize="30dp"
                    style="@style/Running.StatisticNumber"/>
                <TextView
                    android:text="@string/kcal"
                    style="@style/Running.StatisticUnits"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="0dp"
                style="@style/Running.StatisticUnitBackground">
                <TextView
                    android:id="@+id/my_past_activity_details_speed_title"
                    android:text="@string/speed"
                    style="@style/Running.StatisticUnits"/>
                <TextView
                    android:id="@+id/my_past_activity_details_speed"
                    android:text="@string/zero"
                    android:textSize="30dp"
                    style="@style/Running.StatisticNumber"/>
                <TextView
                    android:id="@+id/my_past_activity_details_speed_unit"
                    android:text="@string/speed_ratio"
                    style="@style/Running.StatisticUnits"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amk2.musicrunner.views.MusicRunnerLineMapView
            android:id="@+id/my_past_activity_details_line_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>