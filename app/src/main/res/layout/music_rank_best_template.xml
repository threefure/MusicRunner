<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_rank"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/music_runner_green_border_with_gray_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/song_name"
                android:text="Count on me"
                android:textSize="20dp"
                android:textColor="@color/music_info_red_title"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/singer"
                android:text="Maroon 5"
                android:textSize="14dp"
                android:textColor="@color/music_info_red_title"
                android:layout_below="@+id/song_name"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rank_tag"
                android:text="Best"
                android:background="@drawable/music_runner_best_song_tag"
                android:layout_centerVertical="true"
                style="@style/Music.PerformanceTag"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/album_photo"
                android:src="@drawable/initial_photo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/music_runner_green_round_border"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/burning"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/calories"
                            android:text="324"
                            android:textSize="20dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="@string/kcal"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/music_runner_green_round_border"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:src="@drawable/foot"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/distance"
                                android:text="7"
                                android:layout_marginRight="4dp"
                                style="@style/Music.StatisticNumber"/>
                            <TextView
                                android:text="@string/km"
                                style="@style/Music.StatisticUnit" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/music_runner_green_round_border"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:src="@drawable/times"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/times"
                                android:text="4"
                                android:layout_marginRight="4dp"
                                style="@style/Music.StatisticNumber"/>
                            <TextView
                                android:text="times"
                                style="@style/Music.StatisticUnit" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

