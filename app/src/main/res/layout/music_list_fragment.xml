<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.hb.views.PinnedSectionListView
        android:id="@+id/playlist_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="none"/>
    <ImageView
        android:id="@+id/create_playlist_button"
        android:src="@drawable/add_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/introduction"
        android:background="@color/user_instruction_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/create_playlist_arrow"
            android:src="@drawable/arrow7"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/create_playlist_intro"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_below="@+id/create_playlist_arrow"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/auto_generated_playlist_arrow"
            android:src="@drawable/up_arrow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/auto_generated_playlist_intro"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_below="@+id/auto_generated_playlist_arrow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="right">
            <TextView
                android:text="@string/delete_playlist_intro"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/left_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
