                    android:layout_height="50dp" />
            </RelativeLayout>
            <LinearLayout
                style="@style/My.Card"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:text="@string/my_running_this_week"
                    style="@style/My.Title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        style="@style/Music.RankGeneralBox">
                        <TextView
                            android:id="@+id/my_weekly_speed_title"
                            android:text="@string/pace"
                            android:textStyle="bold"
                            style="@style/Music.RangGeneralBoxText" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/my_weekly_speed"
