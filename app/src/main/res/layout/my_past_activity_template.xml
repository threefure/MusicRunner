<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/music_runner_green_border"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/my_past_activity_photo"
        android:src="@drawable/fox"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/my_past_activity_summary"
        android:text="00 : 17 : 23 | 1.23 km"
        android:textSize="20dp"
        android:textColor="@color/my_title"
        android:layout_toRightOf="@+id/my_past_activity_photo"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/my_past_activity_date"
        android:text="Friday Afternoon, July 25"
        android:textSize="16dp"
        android:textColor="@color/my_subtitle"
        android:layout_toRightOf="@+id/my_past_activity_photo"
        android:layout_below="@+id/my_past_activity_summary"
        android:layout_width="200dp"
        android:layout_height="30dp" />
    <TextView
        android:text=">"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>