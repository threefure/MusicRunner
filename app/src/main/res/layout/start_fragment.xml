<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/start_map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </fragment>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/dog_dialog"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:text="@string/you_are_now_listening_to"
            android:textSize="16dp"
            android:textColor="@color/tiffany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chosen_playlist"
            android:textSize="16dp"
            android:textColor="@color/tiffany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/start_go_running"
        android:text="@string/go_running_button_text"
        style="@style/Start.GoRunningButton"/>
</RelativeLayout>
