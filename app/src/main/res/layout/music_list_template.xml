<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playlist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/choose_playlist"
                android:background="@drawable/playlist_selection_radio_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/playlist_title_container"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="90dp"
            android:gravity="center">
            <TextView
                android:id="@+id/playlist_title"
                android:text="Playlist 1"
                android:textSize="16dp"
                android:textColor="@color/tiffany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/playlist_tracks"
                android:text="0"
                android:textSize="16dp"
                android:textColor="@color/tiffany"
                style="@style/Music.RangGeneralBoxText" />
            <TextView
                android:text="@string/tracks"
                android:textSize="14dp"
                android:textColor="@color/tiffany"
                style="@style/Music.RangGeneralBoxText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>