<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playlist">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/music_runner_clickable_card">
            <TextView
                android:id="@+id/playlist_title"
                android:text="Playlist 1"
                android:textSize="24dp"
                android:textColor="@color/music_info_red_title"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="60dp">
                <LinearLayout
                    style="@style/Music.RankGeneralBox"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/music_track"
                        style="@style/Music.RankGeneralBoxIcon"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/playlist_tracks"
                            android:text="0"
                            android:layout_marginRight="4dp"
                            style="@style/Music.RangGeneralBoxText" />
                        <TextView
                            android:text="tracks"
                            style="@style/Music.RangGeneralBoxText"/>
                    </LinearLayout>
                </LinearLayout>
                <!--LinearLayout
                    style="@style/Music.RankGeneralBox">
                    <ImageView
                        android:src="@drawable/burning"
                        style="@style/Music.RankGeneralBoxIcon" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/playlist_calories"
                            android:text="0.0"
                            android:layout_marginRight="4dp"
                            style="@style/Music.RangGeneralBoxText" />
                        <TextView
                            android:text="@string/kcal"
                            style="@style/Music.RangGeneralBoxText"/>
                    </LinearLayout>
                </LinearLayout-->
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/choose_playlist"
            android:text="Listen"
            android:background="@drawable/music_runner_clickable_grass_round_border"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>